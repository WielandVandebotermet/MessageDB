MDFloatLayout:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            Label:
                id: word_label
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                text: " Enter a Message or show records"
                font_size: 32

        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, 0.5)

        Button
            size_hint: (1, 0.5)
            font_size: 32
            text: "Submit Message"
            on_press: app.submit()

        Button
            size_hint: (1, 0.5)
            font_size: 32
            text: "Show Records"
            on_press: app.show()